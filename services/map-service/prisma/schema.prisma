generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
  id String @id @default(cuid())

  latitude     Float
  longitude    Float
  addressLine1 String
  addressLine2 String?

  source   LocationSource
  provider Provider // GOOGLE, YELP etc
  geohash  String         @db.VarChar(12)

  confidence ConfidenceLevel
  confidenceScore Float @default(0.5)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([latitude, longitude])
  @@index([source])
  @@index([confidence])
  @@map("locations")
}

enum LocationSource {
  USER_SEARCH
  PIN_DROP
  SELECTED
}

enum ConfidenceLevel {
  MEDIUM
  HIGH
  LOW
}

enum Provider {
  google_provider
  uber_provider
}
